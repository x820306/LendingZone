<img width="65px" height="65px" src="/images/icon.png" class="hastip" title="把借款的故事或原因寫下來，<br>能幫助其他人暸解您的情況！<br>有助於借款喔！" style="position:fixed;"/>
<script src="/javascripts/jquery-ui.js"></script>
<link rel="stylesheet" href="/stylesheets/borrower.css">
<script>
	$(document).ready(function (){
		<%if(bfJSON){%>
			<%for(i=0;i<bfJSON.Target.length;i++){%>
				<%if(bfJSON.Target[i]){%>
					$('#f<%=i+1%>').focus();
					<%break;%>
				<%}%>
			<%}%>
		<%}%>
		
		document.body.style['background-color']='#FFE4A3';

		$('#buttonCancel').click(function(){
			$('#borrowDialog').css({
				'display':'none'
			});
			$('.bottomSection').css({
				'background-color': '#FFF9E7'
			});
		});

		$('#buttonCheck').click(function () {
			console.log('click buttonCheck');
			$('#borrowDialog').css({
				'top': (window.pageYOffset+window.innerHeight/4).toString()+'px',
				'display':'block'
			});
			$('.bottomSection').css({
				'background-color': '#EEEEEE'
			});
		});
		$( '.hastip' ).css({
			'top': (window.innerHeight*0.8).toString()+'px',//window.pageYOffset+
			'left': '60%'
		});
		$('.hastip').draggable();
	});
	
	function checkAndOpenModal(target){
		var a=$("input[name='MoneyToBorrow']").val().trim();
		var b=$("input[name='MaxInterestRateAccepted']").val().trim();
		var aa=parseInt(a);
		var bb=parseFloat(b);
		
		if((a!='')&&(b!='')&&(aa>=5000)&&(aa<=150000)&&(bb>=<%=(scr*100)+0.01%>)&&(bb<=99)){
			$("input[name='MoneyToBorrow']").val(aa);
			$("input[name='MaxInterestRateAccepted']").val(bb);
			$(target).modal('show');
		}else{
			$('#msgModal').modal('show');
		}
	}
	
	function clearForm(){
		$('#f1').val('');
		$('#f2').val('');
		$('#f3').prop('selectedIndex', 0);
		$('#f4').val('');
		$('#f5').prop('selectedIndex', 0);
		$('#f6').val('');
		$('#f7').val('');
	}

	var submitFlag=false;
	function disableButton(){
		if(!submitFlag){
			var orig=$('#buttonReset').attr('class');
			if(orig.search(' disabled')<0){
				orig=orig+' disabled';
				$('#buttonReset').attr('class',orig);
			}
			var orig=$('#btnSbmt').attr('class');
			if(orig.search(' disabled')<0){
				orig=orig+' disabled';
				$('#btnSbmt').attr('class',orig);
			}
			submitFlag=true;
			return true;
		}else{
			return false;
		}
	}
</script>
