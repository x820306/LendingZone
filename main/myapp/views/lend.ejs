<%- include('layout_header',{nav_cur:'lend'}); -%>
<div class="container">
	<div class="row">
		<div class="col-md-9">
				<div style="font-size:40pt">自動出借設定</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">銀行帳戶內餘額</h3>
					</div>
					<div class="panel-body">
						<input type="text" class="textForm" value="<%=MoneyInBankAccountValue%>" readonly="readonly" />
					</div>					
				</div>
				</br>
		<% if(!ifFound){ %>
			<form action="/Lends/create" method="post" id="formID">
		<% }else{ %>
			<form action="/Lends/update" method="post" id="formID">
		<% } %>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">最大可借出金額</h3>
					</div>
					<div class="panel-body">
						<% if(!ifFound){ %>
							<input type="number" class="textForm" name="MaxMoneyToLend">
						<% }else{ %>
							<input type="number" class="textForm" name="MaxMoneyToLend" value="<%=MaxMoneyToLendValue%>">
						<% } %>
					</div>					
				</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">欲出借利率</h3>
					</div>
					<div class="panel-body">
						<% if(!ifFound){ %>
							<input type="text" class="textForm" name="InterestRate">
						<% }else{ %>
							<input type="text" class="textForm" name="InterestRate" value="<%=InterestRateValue%>">
						<% } %>
					</div>
				</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">期數（單位/月）</h3>
					</div>
					<div class="panel-body">
						<% if(!ifFound){ %>
							<input type="number" class="textForm" name="MonthPeriod">
						<% }else{ %>
							<input type="number" class="textForm" name="MonthPeriod" value="<%=MonthPeriodValue%>">
						<% } %>
					</div>
				</div>
				</br>
				<% if(!ifFound){ %>
					<div class="btn-toolbar" role="toolbar">
						<div class="btn-group" role="group">
							<button type="submit" class="btn btn-info">新建</button>
						</div>
					</div>
				<% }else{ %>
					<input type="hidden" name="_id" value="<%=_idValue%>">
					<div class="btn-toolbar" role="toolbar">
						<div class="btn-group" role="group">
							<button type="submit" class="btn btn-info">更新</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn btn-danger" onclick="destroy();">刪除</button>
						</div>
					</div>
				<% } %>
			</form>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
<script>
	function destroy(){
		var form=document.getElementById('formID');
		form.action="/Lends/destroy";
		form.submit();
	}
</script>
<%- include('layout_footer'); -%>