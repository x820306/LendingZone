<%- include('layout_header',{nav_cur:'lend',actionDefault:'最新',keywordDefault:''}); -%>
<div class="container">
	<div class="row">
		<div class="col-md-9">
				<div style="font-size:30pt;color:#337ab7;">自動借出設定</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">銀行帳戶內餘額</h3>
					</div>
					<div style="color:#ccc;" class="panel-body">
						<input type="text" class="textForm" value="<%=MoneyInBankAccountValue%>" readonly="readonly" >
					</div>					
				</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">已借出金額</h3>
					</div>
					<div style="color:#ccc;" class="panel-body">
						<input type="text" class="textForm" value="<%=MoneyLended%>" readonly="readonly" >
					</div>					
				</div>
				</br>
		<% if(!jsonLend){ %>
			<form action="/Lends/create" method="post" id="formID">
		<% }else{ %>
			<form action="/Lends/update" method="post" id="formID">
		<% } %>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">最大可借出金額</h3>
					</div>
					<div class="panel-body">
						<% if(!jsonLend){ %>
							<input type="number" class="textForm" name="MaxMoneyToLend">
						<% }else{ %>
							<input type="number" class="textForm" name="MaxMoneyToLend" value="<%=jsonLend.MaxMoneyToLend%>">
						<% } %>
					</div>					
				</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">欲借出利率</h3>
					</div>
					<div class="panel-body">
						<% if(!jsonLend){ %>
							<input type="text" class="textForm" name="InterestRate">
						<% }else{ %>
							<input type="text" class="textForm" name="InterestRate" value="<%=jsonLend.InterestRate%>">
						<% } %>
					</div>
				</div>
				</br>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">期數（單位/月）</h3>
					</div>
					<div class="panel-body">
						<% if(!jsonLend){ %>
							<input type="number" class="textForm" name="MonthPeriod">
						<% }else{ %>
							<input type="number" class="textForm" name="MonthPeriod" value="<%=jsonLend.MonthPeriod%>">
						<% } %>
					</div>
				</div>
				</br>
				<% if(!jsonLend){ %>
					<div class="btn-toolbar" role="toolbar">
						<div class="btn-group" role="group">
							<button type="submit" class="btn btn-info">新建</button>
						</div>
					</div>
				<% }else{ %>
					<input type="hidden" name="_id" value="<%=jsonLend._id%>">
					<div class="btn-toolbar" role="toolbar">
						<div class="btn-group" role="group">
							<button type="submit" class="btn btn-info">更新</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn btn-danger" onclick="destroy();">刪除</button>
						</div>
					</div>
				<% } %>
			</form>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>
<% if(jsonLend){ %>
<script>
	function destroy(){
		var form=document.getElementById('formID');
		form.action="/Lends/destroy";
		form.submit();
	}
</script>
<% } %>
<%- include('layout_footer'); -%>