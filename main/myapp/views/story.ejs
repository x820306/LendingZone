								submitFlag=true;
								return true;
							}else{
								return false;
							}
						}
					<%}%>
				<%}%>
			<%}else{%>
				<%if((json.IfReadable)&&(jsonBorrowMessage.Status=='NotConfirmed')){ %>
					<%if(jsonLend){%>
						
						var lendChangerFlag=false;
						function lendChanger(){
							if(!lendChangerFlag){
								var temp=$('#lendChangerIpt').val().trim();
								if(temp!==''){
									ajaxer(temp);
								}else{
									$('#s0').html('&nbsp;&nbsp;&nbsp;&nbsp;不可為空值！');
								}
							}
						}
						
						function ajaxer(value){
							$('#s0').html('&nbsp;&nbsp;&nbsp;&nbsp;處理中...');
							starter();
							$.ajax({ 
								url: '/Lends/changer',
								type: 'POST',
								data:{Value:value,TargetID:"<%=jsonLend._id%>"},
								dataType: 'json',
								success: function(Jdata) {
									var origInner;
									if(Jdata.success){
										$('#lendChangerIpt0').val(Jdata.result0.toFixed(0));
										$('#lendChangerIpt').val(Jdata.result.toFixed(0));
										$('#s0').html('&nbsp;&nbsp;&nbsp;&nbsp;成功修改！');
									}else{
										if(Jdata.result0){
											$('#lendChangerIpt0').val(Jdata.result0.toFixed(0));
										}
										if(Jdata.origValue){
											$('#lendChangerIpt').val(Jdata.origValue.toFixed(0));
										}
										$('#s0').html('&nbsp;&nbsp;&nbsp;&nbsp;'+Jdata.error);
									}
									ender();
								},
								error: function() {
									$('#s0').html('&nbsp;&nbsp;&nbsp;&nbsp;something wrong!');
									ender();
								}
							});	
						}
						
						function starter(){
							lendChangerFlag=true;
							$('#lendChangerIpt').attr('onkeypress','');
							$('#lendChangerIpt').attr('readonly','readonly');
							var orig=$('#lendChangerBtn').attr('class');
							if(orig.search(' disabled')<0){
								orig=orig+' disabled';
								$('#lendChangerBtn').attr('class',orig);
							}
							
							submitFlag=true;
							orig=$('#argBtnID').attr('class');
							if(orig.search(' disabled')<0){
								orig=orig+' disabled';
								$('#argBtnID').attr('class',orig);
							}
							orig=$('#rfsBtnID').attr('class');
							if(orig.search(' disabled')<0){
								orig=orig+' disabled';
								$('#rfsBtnID').attr('class',orig);
							}
						}
						
						function ender(){
							lendChangerFlag=false;
							$('#lendChangerIpt').attr('onkeypress','if(event.keyCode==13){lendChanger();}');
							$('#lendChangerIpt').removeAttr("readonly");
							var orig=$('#lendChangerBtn').attr('class');
							orig=orig.replace(/ disabled/g, '');
							$('#lendChangerBtn').attr('class',orig);
							
							submitFlag=false;
							orig=$('#argBtnID').attr('class');
							orig=orig.replace(/ disabled/g, '');
							$('#argBtnID').attr('class',orig);
							orig=$('#rfsBtnID').attr('class');
							orig=orig.replace(/ disabled/g, '');
							$('#rfsBtnID').attr('class',orig);
						}
					<%}%>
					
					function agree(){
						$('#chkModal4').modal('hide');
					}
					
					function refuse(){
						$('#chkModal5').modal('hide');
						disableButton();
						
						var form=document.getElementById('confirmFormID');
						form.action="/Messages/rejectToBorrowMessageInStory";
						form.submit();
					}
					
					var submitFlag=false;
					function disableButton(){
						if(!submitFlag){
							var orig=$('#argBtnID').attr('class');
							if(orig.search(' disabled')<0){
								orig=orig+' disabled';
								$('#argBtnID').attr('class',orig);
							}
							
							orig=$('#rfsBtnID').attr('class');
							if(orig.search(' disabled')<0){
								orig=orig+' disabled';
								$('#rfsBtnID').attr('class',orig);
							}
							submitFlag=true;
							return true;
						}else{
							return false;
						}
					}
				<%}else if((!json.IfReadable)&&(jsonBorrowMessage.Status=='NotConfirmed')){%>
					function refuse(){
						$('#chkModal6').modal('hide');
					}
					
					var submitFlag=false;
					function disableButton(){
						if(!submitFlag){
							var orig=$('#rfsBtnID').attr('class');
							if(orig.search(' disabled')<0){
								orig=orig+' disabled';
								$('#rfsBtnID').attr('class',orig);
							}
							submitFlag=true;
							return true;
						}else{
							return false;
						}
					}
				<%}%>
			<%}%>	
		<%}else{%>
			<%if(json.IfReadable){ %>
				function readable(){
					$('#readableModal').modal('hide');
				}
				
				var submitFlag=false;
				function disableButton(){
					if(!submitFlag){
						var orig=$('#readableBtnID').attr('class');
						if(orig.search(' disabled')<0){
							orig=orig+' disabled';
							$('#readableBtnID').attr('class',orig);
						}
						submitFlag=true;
						return true;
					}else{
						return false;
					}
				}
			<%}%>
		<%}%>
	<%}%>
</script>
