<%- include('layout_header',{searchTitle:null,nav_cur:'autoPage',messengerDefault:'不分訊息狀態',actionDefault:'建立日期',directorDefault:'大至小',keywordDefault:'',categoryDefault:'不分類'}); -%>
<div class="container">
	<div class="row">
		<center>
			<br><br><br><br><br><br><br>
			<%if(msg!==null){%>
				<h4><%=msg%></h4>
				<br>
			<%}%>
			<form method = "post" action= "/<%if(!ifE){%>autoConfirmPost<%}else{%>disableAutoConfirmPost<%}%>" onsubmit="return disableButton();">
				<button id="goBtn" type="submit" class="btn btn-default btn-lg">
					  <span class="glyphicon <%if(!ifE){%>glyphicon-ok<%}else{%>glyphicon-remove<%}%>" aria-hidden="true"></span> <%if(!ifE){%>啟動<%}else{%>關閉<%}%>自動同意
				</button></div>
			</form>
		</center>
		<center>
			<br>
			<form method = "post" action= "/<%if(!ifE2){%>autoNotReadablePost<%}else{%>disableAutoNotReadablePost<%}%>" onsubmit="return disableButton();">
				<button id="goBtn2" type="submit" class="btn btn-default btn-lg">
					  <span class="glyphicon <%if(!ifE2){%>glyphicon-ok<%}else{%>glyphicon-remove<%}%>" aria-hidden="true"></span> <%if(!ifE2){%>啟動<%}else{%>關閉<%}%>自動封存
				</button></div>
			</form>
			<br><br><br><br><br><br><br>
		</center>
	</div>
</div>
<script>
	var submitFlag=false;
	function disableButton(){
		if(!submitFlag){
			$('#goBtn').addClass('disabled');
			$('#goBtn2').addClass('disabled');
			submitFlag=true;
			return true;
		}else{
			return false;
		}
	}
</script>
