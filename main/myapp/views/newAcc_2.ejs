<%- include('layout_header',{searchTitle:null,nav_cur:'signup',messengerDefault:'不分訊息狀態',actionDefault:'建立日期',directorDefault:'大至小',keywordDefault:'',categoryDefault:'不分類'}); -%>
	<style>
	.hint{
	position:absolute;
	right:370px; 
	bottom:330px;
	}
	</style>
	<div align = "center">
	<button type="button" class="btn btn-primary">
  	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>個人資料登錄</button>
	<button type="button" class="btn btn-default">
  	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>帳號密碼設定</button>
	<button type="button" class="btn btn-default">
  	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>社群資料提供</button>
	<button type="button" class="btn btn-default">
  	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>帳戶建立完成</button>
	</div>

	<div class="container">
		<div class="row">
			<center>
			<form enctype="multipart/form-data" method="post" action="/signup/_apply">
				<h3>新增個人資料<br></h3>
				<table class="table table-hover myTbody" style = "width:70%">
				<tr>
					<td align = "right" style = "width:15%">
						姓名<br>
						<span id="s1" class="red"><%if(nafJSON){%><%if(nafJSON.Target[0]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[0]%><%}%><%}%></span>
					</td>
					<td><input type="text" class="form-control" id="f1" name="nameIpt" placeholder="姓名" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F1%>"<%}%>></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						性別<br>
						<span id="s2" class="red"><%if(nafJSON){%><%if(nafJSON.Target[1]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[1]%><%}%><%}%></span>
					</td>
					<td><label class="radio-inline">
					<input type="radio" name="genderIpt" id="f2a" value="Male" required="required"<%if(nafJSON){%><%if(nafJSON.FormContent.F2==='Male'){%> checked="true"<%}%><%}%>> 男性</label>
					<label class="radio-inline">
					<input type="radio" name="genderIpt" id="f2b" value="Female" required="required"<%if(nafJSON){%><%if(nafJSON.FormContent.F2==='Female'){%> checked="true"<%}%><%}%>> 女性</label></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						生日<br>
						<span id="s3" class="red"><%if(nafJSON){%><%if(nafJSON.Target[2]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[2]%><%}%><%}%></span>
					</td>
					<td><input type="text" class="form-control" id="f3" name="birthIpt" placeholder="生日(年/月/日)" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F3%>"<%}%>></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						身分證字號<br>
						<span id="s4" class="red"><%if(nafJSON){%><%if(nafJSON.Target[3]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[3]%><%}%><%}%></span>
					</td>
					<td><input type="text" class="form-control" id="f4" name="ssnIpt" placeholder="身分證字號" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F4%>"<%}%>></td>
				</tr>
				<tr>
				    <td align = "right" style = "width:15%">
						身分證圖檔<br>
						<span id="s5" class="red"><%if(nafJSON){%><%if(nafJSON.Target[4]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[4]%><%}%><%}%></span>
					</td>
				    <td><input type="file" id="f5" name="ssnImg" accept="image/png,image/jpeg" required="required">
				    <p class="help-block">請上傳身分證正面圖檔以利我們驗證您的身份</p></td>
				</tr>
				<tr>
				    <td align = "right" style = "width:15%">
						第二證件圖檔<br>
						<span id="s6" class="red"><%if(nafJSON){%><%if(nafJSON.Target[5]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[5]%><%}%><%}%></span>
					</td>
				    <td><input type="file" id="f6" name="cerImg" accept="image/png,image/jpeg" required="required">
				    <p class="help-block">請上傳另一張證件正面圖檔以利我們驗證您的身份</p></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						行動電話<br>
						<span id="s7" class="red"><%if(nafJSON){%><%if(nafJSON.Target[6]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[6]%><%}%><%}%></span>
					</td>
					<td><input type="text" class="form-control" id="f7" name="telIpt" placeholder="行動電話" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F7%>"<%}%>></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						E-mail<br>
						<span id="s8" class="red"><%if(nafJSON){%><%if(nafJSON.Target[7]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[7]%><%}%><%}%></span>
					</td>
					<td><input type="email" class="form-control" id="f8" name="emailIpt" placeholder="E-mail" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F8%>"<%}%>></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						住址<br>
						<span id="s9" class="red"><%if(nafJSON){%><%if(nafJSON.Target[8]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[8]%><%}%><%}%></span>
					</td>
					<td><input type="text" class="form-control" id="f9" name="addrIpt" placeholder="住址" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F9%>"<%}%>></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						欲使用卡片之卡號<br>
						<span id="s10" class="red"><%if(nafJSON){%><%if(nafJSON.Target[9]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[9]%><%}%><%}%></span>
					</td>
					<td><input type="text" class="form-control" id="f10" name="cardIpt" placeholder="欲使用卡片之卡號" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F10%>"<%}%>></td>
				</tr>
				<tr>
					<td align = "right" style = "width:15%">
						卡片密碼<br>
						<span id="s11" class="red"><%if(nafJSON){%><%if(nafJSON.Target[10]){%>&nbsp;&nbsp;&nbsp;&nbsp;<%=nafJSON.Message[10]%><%}%><%}%></span>
					</td>
					<td><input type="password" class="form-control" id="f11" name="cardPwdIpt" placeholder="卡片密碼" required="required"<%if(nafJSON){%> value="<%=nafJSON.FormContent.F11%>"<%}%>></td>
				</tr>
				</table>
				<input type="hidden" name="FormSession1" value="<%=formSession1%>">
				<div class="btn-toolbar" role="toolbar" style = "margin-top: 10px;">
				<button type="submit" class="btn btn-default btn-lg" >
				  <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 確認
				</button>
				<button type="button" class="btn btn-default btn-lg" onClick = "javascript:location.href='/'" >
				  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 關閉
				</button>
				</div>
			</form>		
		</center>
		</div>
	</div>
	<div class = "hint">
	&nbsp;&nbsp;&nbsp;&nbsp;<span><img width="65px" height="65px" src="/images/icon.png" class="hastip" title="快快填上您的資料吧~<br>放心，您的資料會被妥善保管的!"/></span>
	</div>

	

<script>
	$(document).ready(function (){
		<%if(nafJSON){%>
			<%for(i=0;i<nafJSON.Target.length;i++){%>
				<%if(nafJSON.Target[i]){%>
					<%if(i!==1){%>
						$('#f<%=i+1%>').focus();
					<%}%>
					<%break;%>
				<%}%>
			<%}%>
		<%}%>
		
		$("#f3").datepicker({yearRange: '-100:+0',minDate: '-100Y', maxDate: +0});
	});
</script>

<%- include('layout_footer',{imgSettingCode:"var ifLoadedCount=0;",imgDrawingCode:"",nav_cur:'signup'}); -%>